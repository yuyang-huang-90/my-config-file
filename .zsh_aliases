# eza alias
if command -v eza &> /dev/null; then
    alias e='eza'
    alias el='eza -la -g'
    alias ll='eza -la -g'
    alias ea='eza -a'
    alias l='eza'
    alias ls='eza'
fi

# nvim alias (fallback to vim if nvim not available)
if ! command -v nvim &> /dev/null; then
    alias nvim='vim'
fi

# bat alias (better cat)
if command -v bat &> /dev/null; then
    alias cat='bat -pp'
fi

# dust alias (better du)
if command -v dust &> /dev/null; then
    alias du='dust'
fi

# procs alias (better ps)
if command -v procs &> /dev/null; then
    alias psa='procs'
fi

# bottom alias (system monitor)
if command -v btm &> /dev/null; then
    alias top='btm'
    alias htop='btm'
fi

# zoxide alias (smart cd)
if command -v zoxide &> /dev/null; then
    alias cd='z'
fi

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# some more alias to avoid making mistake
alias c='clear'

#git
if command -v fzf &> /dev/null; then
    alias gco='git checkout $(git branch | fzf)'
fi
if command -v git-icdiff &> /dev/null; then
    alias gdi='git icdiff'
fi
