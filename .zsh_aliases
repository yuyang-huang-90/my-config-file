# some difference between OS X and Linux
# for mac only
if ls / | grep "Applications" > /dev/null # if sys is os x then change sth.
then
    LS_COLOR='-G'
    alias eclimd='/Applications/eclipse/eclimd'
    if [ -d ~/homebrew ]
    then
      alias mvim='~/homebrew/bin/vim'
    else
      alias mvim='/usr/local/bin/vim'
    fi
  else
    # for linux only
    LS_COLOR='--color'
    alias mvim='vim'
    alias eclimd='~/eclipse/eclimd'
    alias svim='sudo vim'
fi

# eza alias
alias e='eza'
alias el='eza -la -g'
alias ll='eza -la -g'
alias ea='eza -a'
alias l='eza'
alias ls='eza'

# bat alias (better cat)
alias cat='bat -pp'

# dust alias (better du)
alias du='dust'

# procs alias (better ps)
alias psa='procs'

# bottom alias (system monitor)
alias top='btm'
alias htop='btm'

# dfrs alias (better df)
alias df='dfrs'

# zoxide alias (smart cd)
alias cd='z'

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# some more alias to avoid making mistake
alias c='clear'

# nvim alias
# alias nvim='vim'
alias nvimf='nvim $(fzf)'

# network tools
alias trip='sudo ${HOME}/.cargo/bin/trip'

#git
alias gco='git checkout $(git branch | fzf)'
alias gdi='git icdiff'
