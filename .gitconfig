[user]
	name = Yuyang Huang
	email = sigefriedhyy@gmail.com
[core]
	editor = nvim
	pager = delta
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
	dark = true
	side-by-side = true
	line-numbers = true
	syntax-theme = none
	file-style = omit
	file-decoration-style = none
	hunk-header-style = file line-number
	hunk-header-file-style = blue bold
	hunk-header-line-number-style = yellow
	hunk-header-decoration-style = blue box
[merge]
	conflictStyle = zdiff3
[color]
	ui = true
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[push]
	default = simple
[credential]
	helper = store
[icdiff]
	options = --line-numbers
